row = int(input("Enter the number of rows: "))
alpha = 'A' 

for i in range(1, row + 1):
    print(" " * (row - i) + alpha * (2 * i - 1))
    alpha = chr(ord(alpha) + 1)  

alpha = chr(ord(alpha) - 2)  


for i in range(row - 1, 0, -1):
    print(" " * (row - i) + alpha * (2 * i - 1))
    alpha = chr(ord(alpha) - 1)  
